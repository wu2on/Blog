@using Blog.BLL.Dto
@model List<BlogDto>
    
@if (Request.IsAuthenticated)
{
    foreach (BlogDto m in Model)
    {
    <div class="row">
        <div class="col-lg">
            <div class="thumbnail custom-blog">
                <span class="label label-default text-left custom-author">@m.UserProfile.Email</span>
                <div class="caption">
                    <h3 class="text-center custom-blog_title">
                        @m.Title
                    </h3>
                    <p class="custom-blog_text">
                        @m.Text
                    </p>
                    <div class="text-right">
                        <span class="custom-blog_time">
                            @m.CreateAt
                        </span>
                    </div>
                </div>
                <div class="custom-comment_block">
                @foreach (CommentDto c in m.Comment)
                {
                    if (c != null)
                    {
                    <div class="well well-sm custom-comment">
                        <span class="label label-default text-left custom-author">@c.UserEmail</span>
                        <div class="custom-blog_text small">
                            @c.Text
                        </div>
                        <div class="text-right">
                            <span class="custom-blog_time small">@c.CreateAt</span>
                        </div>
                    </div>
                    }
                }
                </div>
                
                @using (Html.BeginForm("AddComment", "Blog", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group">
                        <input type="text" class="form-control" name="comment" placeholder="Add a comment..." />
                        <input type="text" class="hidden" name="postId" value="@m.Id" />
                        <span class="input-group-btn">
                            <button type="submit" name="url" value="Home" class="btn-primary custom-bth">Post</button>
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
    }
}
else
{
<div>
Welcome!
</div>
}