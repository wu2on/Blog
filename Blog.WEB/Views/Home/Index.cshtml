@using Microsoft.AspNet.Identity
@using Blog.BLL.Dto
@model List<BlogDto>
    
@if (Request.IsAuthenticated)
{
    foreach (BlogDto m in Model)
    {
        <div class="row">
            <div class="col-md-4 col-md-offset-3">
                <div class="thumbnail">
                    <span class="label label-default center-block">@m.UserProfile.Email</span>
                    <div class="caption">
                        <h3 class="text-center">
                            @m.Title
                        </h3>
                        <p>
                            @m.Text
                        </p>
                        <span class="label label-info center-block">
                            @m.CreateAt
                        </span>
                    </div>
                    @foreach (CommentDto c in m.Comment)
                    {
                        if (c != null)
                        {
                            <div class="well well-sm">
                                @c.Text
                            </div>
                        }
                    }

                    @using (Html.BeginForm("AddComment", "Blog", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <input type="text" class="form-control" name="comment" placeholder="Add a comment..." />
                            <input type="text" class="hidden" name="postId" value="@m.Id" />
                            <span class="input-group-btn">
                                <input type="submit" value="Go!" />
                            </span>
                        </div>
                    }

                </div>
                    </div>
        </div>
    }
}
else
{
    <div>
    Welcome!
    </div>
}