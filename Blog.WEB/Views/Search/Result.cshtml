@using Blog.WEB.Models
@model IEnumerable<BlogPreviewModel>

@if (Request.IsAuthenticated)
{
    if (Model != null)
    {
        foreach (BlogPreviewModel item in Model)
        {
            <div class="row">
                <div class="col-lg">
                    <div class="thumbnail custom-blog">
                        <span class="label label-default text-left custom-author">@item.UserEmail</span>
                        <div class="caption">
                            <h3 class="text-center custom-blog_title">
                                @item.Title
                            </h3>
                            <p class="custom-blog_preview">
                                @item.Text
                            </p>
                            <div class="text-right">
                                @Html.ActionLink("Read", "Details/" + @item.Id, "Home") |
                                <span class="custom-blog_time">
                                    @item.CreateAt
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h4 class="custom-title">No results were found for your search</h4>
    }
}
